<body>
    <div class="container">
        <h1>Checkpoint 3</h1>
        <div id="popup1" class="popup">Pop-up 1: Loading...</div>
        <div id="popup2" class="popup" style="display: none;">Pop-up 2: Click to proceed</div>
        <div id="keyDisplay" class="key-display">
            <h2>Your Generated Key:</h2>
            <p id="key"></p>
        </div>
        <button class="button" id="proceedButton" style="display: none;" onclick="generateKey()">Generate Key</button>
    </div>

    <script>
        function showPopup(popupId, delay) {
            return new Promise(resolve => {
                setTimeout(() => {
                    document.getElementById(popupId).style.display = 'block';
                    resolve();
                }, delay);
            });
        }

        async function generateKey() {
            await showPopup('popup1', 5000); // Show first popup after 5 seconds
            await showPopup('popup2', 5000); // Show second popup after 5 seconds
            const key = 'GENERATED_KEY_HERE'; // Replace with your dynamic key generation logic
            document.getElementById('key').textContent = key;
            document.getElementById('keyDisplay').style.display = 'block';
        }

        window.onload = function() {
            showPopup('popup1', 15000).then(() => {
                showPopup('popup2', 5000).then(() => {
                    document.getElementById('proceedButton').style.display = 'block';
                });
            });
        }
    </script>
</body>
</html>
